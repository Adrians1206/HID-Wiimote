<Window x:Class="HID_Wiimote_Control_Center.InstallerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HID_Wiimote_Control_Center"
        mc:Ignorable="d"
        Title="HID Wiimote Installer" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="0">
            <GroupBox x:Name="TestMode" Header="Test Mode" Margin="10,0" Height="78"/>
            <GroupBox x:Name="Certificate" Header="Certificate" Margin="10,0" Height="78"/>
            <GroupBox x:Name="DriverPackage" Header="Driver Package" Margin="10,0" Height="78"/>
        </StackPanel>
    </Grid>
</Window>
